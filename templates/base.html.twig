<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}SOA - Symfony of Ages{% endblock %}</title>
        {% block stylesheets %}
            {{ vite_entry_link_tags('app') }}
            <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;500;600;700&family=Merriweather:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900&family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500&display=swap" rel="stylesheet">
        {% endblock %}

        {% block javascripts %}
            {{ vite_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <!-- Flash Messages -->
        {% if app.flashes %}
            <div class="flash-messages">
                {% for type, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="flash-message {{ type }}">
                            {% if type == 'success' %}
                                {{ ux_icon('lucide:check-circle') }}
                            {% elseif type == 'error' %}
                                {{ ux_icon('lucide:alert-circle') }}
                            {% elseif type == 'warning' %}
                                {{ ux_icon('lucide:alert-triangle') }}
                            {% else %}
                                {{ ux_icon('lucide:info') }}
                            {% endif %}
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        {% endif %}

        {% block body %}{% endblock %}
        {{ include('partials/footer.html.twig') }}
    </body>
</html>
