{% extends 'layouts/page_with_header.html.twig' %}

{% block title %}Create New Game - SOA{% endblock %}

{% block page_title %}Create New Game{% endblock %}

{% block page_subtitle %}Build your strategic empire{% endblock %}

{% block page_actions %}
    <a href="{{ path('app_games') }}" class="btn btn-outline">
        {{ ux_icon('lucide:arrow-left') }}
        Back to Games
    </a>
{% endblock %}

{% block content %}
    <turbo-frame id="game-create-form" data-turbo-action="advance">
        {{ component('GameCreateForm') }}
    </turbo-frame>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Override page specific styles for create form */
        .page-content {
            min-height: 70vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .page-content-container {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
        }
        
        /* Flash messages styles */
        .flash-messages {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1050;
            max-width: 400px;
        }
        
        .flash-message {
            padding: var(--spacing-md);
            margin-bottom: var(--spacing-sm);
            border-radius: var(--radius-md);
            display: flex;
            align-items: center;
            gap: var(--spacing-sm);
            animation: slideInRight 0.3s ease-out;
        }
        
        .flash-message.success {
            background: rgba(46, 204, 113, 0.1);
            border: 1px solid rgba(46, 204, 113, 0.3);
            color: var(--color-success);
        }
        
        .flash-message.error {
            background: rgba(220, 20, 60, 0.1);
            border: 1px solid rgba(220, 20, 60, 0.3);
            color: var(--color-error);
        }
        
        @keyframes slideInRight {
            from {
                transform: translateX(100%);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }
    </style>
{% endblock %} 