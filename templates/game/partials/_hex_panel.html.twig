<div class="panel-header">
    <h3>Hex Information</h3>
    <button class="panel-close"
            type="button"
            data-action="live#action"
            data-live-action-param="close">
        &times;
    </button>
</div>
<div class="hex-panel">
    <div class="panel-content">
        <div class="hex-info">
            <div class="info-row">
                <span class="info-label">Terrain (method):</span>
                <span class="info-value">{{ this.getPayloadValue('terrainName', 'Unknown') }}</span>
            </div>
            <div class="info-row">
                <span class="info-label">Position:</span>
                <span class="info-value">{{ this.getPayloadValue('coordinates', '(0, 0)') }}</span>
            </div>
            <div class="info-row">
                <span class="info-label">Movement Cost:</span>
                <span class="info-value">{{ this.getPayloadValue('movementCost', 1) }}</span>
            </div>
            <div class="info-row">
                <span class="info-label">Defense Bonus:</span>
                <span class="info-value">{{ this.getPayloadValue('defense', 0) }}</span>
            </div>
            <div class="info-row">
                <span class="info-label">Resources:</span>
                <span class="info-value">{{ this.getPayloadValue('resources', 0) }}</span>
            </div>
        </div>

        <div class="hex-actions">
            <button class="btn btn-primary"
                    data-action="live#action"
                    data-live-action-param="buildCity">
                Build City
            </button>
            <button class="btn btn-secondary"
                    data-action="live#action"
                    data-live-action-param="moveUnitHere">
                Move Unit Here
            </button>
        </div>
    </div>
</div>
