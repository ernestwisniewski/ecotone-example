<div class="panel-header">
    <h3>Hex Information</h3>
    <button class="panel-close"
            type="button"
            data-action="live#action"
            data-live-action-param="close">
        &times;
    </button>
</div>
<div class="hex-panel">
    <div class="panel-content">
        <div class="hex-info">
            <div class="info-row">
                <span class="info-label">Terrain:</span>
                <span class="info-value">{{ payload.terrainName ?? 'Unknown' }}</span>
            </div>
            <div class="info-row">
                <span class="info-label">Position:</span>
                <span class="info-value">({{ payload.position.row ?? 0 }}, {{ payload.position.col ?? 0 }})</span>
            </div>
            <div class="info-row">
                <span class="info-label">Movement Cost:</span>
                <span class="info-value">{{ payload.movementCost ?? 1 }}</span>
            </div>
            <div class="info-row">
                <span class="info-label">Defense Bonus:</span>
                <span class="info-value">{{ payload.defense ?? 0 }}</span>
            </div>
            <div class="info-row">
                <span class="info-label">Resources:</span>
                <span class="info-value">{{ payload.resources ?? 0 }}</span>
            </div>
        </div>

        <div class="hex-actions">
            <button class="btn btn-primary"
                    data-action="live#action"
                    data-live-action-param="buildCity">
                Build City
            </button>
            <button class="btn btn-secondary"
                    data-action="live#action"
                    data-live-action-param="moveUnitHere">
                Move Unit Here
            </button>
        </div>
    </div>
</div>
