<div class="city-panel">
    <div class="panel-header">
        <h3>City Information</h3>
        <button class="panel-close" 
                type="button"
                data-action="live#action"
                data-live-action-param="close">
            &times;
        </button>
    </div>
    
    <div class="panel-content">
        <div class="city-info">
            <div class="info-row">
                <span class="info-label">Name:</span>
                <span class="info-value">{{ this.getPayloadValue('name', 'Unknown City') }}</span>
            </div>
            <div class="info-row">
                <span class="info-label">Owner:</span>
                <span class="info-value">{{ this.getPayloadValue('ownerId', 'Unknown') }}</span>
            </div>
            <div class="info-row">
                <span class="info-label">Position:</span>
                <span class="info-value">({{ this.getPayloadValue('position.x', 0) }}, {{ this.getPayloadValue('position.y', 0) }})</span>
            </div>
            <div class="info-row">
                <span class="info-label">Population:</span>
                <span class="info-value">{{ this.getPayloadValue('population', 0) }}</span>
            </div>
            <div class="info-row">
                <span class="info-label">Production:</span>
                <span class="info-value">{{ this.getPayloadValue('production', 0) }}</span>
            </div>
            <div class="info-row">
                <span class="info-label">Food:</span>
                <span class="info-value">{{ this.getPayloadValue('food', 0) }}</span>
            </div>
            <div class="info-row">
                <span class="info-label">Gold:</span>
                <span class="info-value">{{ this.getPayloadValue('gold', 0) }}</span>
            </div>
        </div>
        
        <div class="city-actions">
            <button class="btn btn-primary" onclick="console.log('Build unit in city')">
                Build Unit
            </button>
            <button class="btn btn-secondary" onclick="console.log('Build building in city')">
                Build Building
            </button>
            <button class="btn btn-warning" onclick="console.log('Manage city')">
                Manage City
            </button>
        </div>
    </div>
</div> 