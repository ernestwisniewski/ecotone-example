{% extends 'base.html.twig' %}

{% block body %}
    <!-- Page Header Section -->
    <div class="page-header">
        <!-- Background layers -->
        <div class="page-header-background">
            <div class="page-header-gradient"></div>
        </div>

        <!-- Navigation -->
        {{ include('partials/navbar.html.twig') }}

        <!-- Header Content -->
        <div class="page-header-content">
            {% block header_content %}
                <h1 class="page-title">{% block page_title %}Page{% endblock %}</h1>
                {% if block('page_subtitle')|trim %}
                    <p class="page-subtitle">{% block page_subtitle %}{% endblock %}</p>
                {% endif %}
            {% endblock %}
        </div>
    </div>

    <!-- Page Content Section -->
    <div class="page-content">
        <div class="page-content-container">
            {% block content %}
                <div class="empty-state">
                    <svg fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v8a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2H4zm2 6a2 2 0 104 0 2 2 0 00-4 0zm6 0a2 2 0 104 0 2 2 0 00-4 0z" clip-rule="evenodd"></path>
                    </svg>
                    <h3>No Content</h3>
                    <p>This page is under construction.</p>
                </div>
            {% endblock %}
        </div>
    </div>
{% endblock %}
