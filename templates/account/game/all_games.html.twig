{% extends 'layouts/page_with_header.html.twig' %}

{% block title %}My Games - SOA{% endblock %}

{% block page_title %}My Games{% endblock %}

{% block content %}
    {% if games is not empty %}
        <div class="content-grid three-columns">
            {% for game in games %}
                <div class="content-card">
                    <h3>Gra #{{ game.id }}</h3>
                    <p><strong>Status:</strong> {{ game.status }}</p>
                    <p><strong>Utworzono:</strong> {{ game.createdAt|date('d.m.Y H:i') }}</p>
                    {% if game.lastMoveAt %}
                        <p><strong>Ostatni ruch:</strong> {{ game.lastMoveAt|date('d.m.Y H:i') }}</p>
                    {% endif %}

                    <div class="card-actions">
                        <a href="#" class="btn btn-primary btn-sm">
                            <svg fill="currentColor" viewBox="0 0 20 20" style="width: 16px; height: 16px; margin-right: 6px;">
                                <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z" clip-rule="evenodd"></path>
                            </svg>
                            Play
                        </a>
                        <a href="#" class="btn btn-outline btn-sm">
                            <svg fill="currentColor" viewBox="0 0 20 20" style="width: 16px; height: 16px; margin-right: 6px;">
                                <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"></path>
                                <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"></path>
                            </svg>
                            Details
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="empty-state">
            <svg fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 5a2 2 0 012-2h10a2 2 0 012 2v8a2 2 0 01-2 2h-2.22l.123.489.804.804A1 1 0 0113 18H7a1 1 0 01-.707-1.707l.804-.804L7.22 15H5a2 2 0 01-2-2V5zm5.771 7H5V5h10v7H8.771z" clip-rule="evenodd"></path>
            </svg>
            <h3>No Games</h3>
            <p>You don't have any games yet. Start your first strategic game!</p>
            <a href="#" class="btn btn-primary">
                <svg fill="currentColor" viewBox="0 0 20 20" style="width: 20px; height: 20px; margin-right: 8px;">
                    <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"></path>
                </svg>
                Start New Game
            </a>
        </div>
    {% endif %}
{% endblock %}
