{% extends 'layouts/page_with_header.html.twig' %}

{% block title %}My Games - SOA{% endblock %}

{% block page_title %}My Games{% endblock %}

{% block page_actions %}
    <a href="{{ path('app_game_create') }}" class="btn btn-primary">
        {{ ux_icon('lucide:plus') }}
        Create New Game
    </a>
{% endblock %}

{% block content %}
    {% if games is not empty %}
        <div class="content-grid three-columns">
            {% for game in games %}
                <div class="content-card">
                    <h3>{{ game.name }}</h3>
                    <p><strong>Status:</strong> {{ game.status }}</p>
                    <p><strong>Created:</strong> {{ game.createdAt|date('d.m.Y H:i') }}</p>
                    {% if game.startedAt %}
                        <p><strong>Started:</strong> {{ game.startedAt|date('d.m.Y H:i') }}</p>
                    {% endif %}

                    <div class="card-actions">
                        <a href="#" class="btn btn-primary btn-sm">
                            {{ ux_icon('lucide:play') }}
                            Play
                        </a>
                        <a href="#" class="btn btn-outline btn-sm">
                            {{ ux_icon('lucide:eye') }}
                            Details
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="empty-state">
            {{ ux_icon('lucide:gamepad-2') }}
            <h3>No Games</h3>
            <p>You don't have any games yet. Start your first strategic game!</p>
            <a href="{{ path('app_game_create') }}" class="btn btn-primary">
                {{ ux_icon('lucide:plus') }}
                Start New Game
            </a>
        </div>
    {% endif %}
{% endblock %}
